<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcf8ec"
    tools:context=".LoginActivity">

    <LinearLayout
        android:id="@+id/ll_iconbase"
        android:layout_above="@+id/tv_title"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginBottom="40dp"
        android:background="@drawable/ic_baseline_account_balance_24"
        android:layout_width="80dp"
        android:layout_height="80dp">
    </LinearLayout>

    <TextView
        android:id="@+id/tv_title"
        android:layout_above="@+id/ll_login"
        android:layout_centerInParent="true"
        android:textSize="24sp"
        android:layout_marginBottom="40dp"
        android:layout_centerHorizontal="true"
        android:text="Transaksi Keuangan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_login"
        android:layout_centerVertical="true"
        android:backgroundTint="#6692A1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_height="wrap_content">
        <EditText
            android:background="@drawable/square"
            android:id="@+id/et_username"
            android:hint="Username"
            android:textColorHint="#fcf8ec"
            android:paddingLeft="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <EditText
            android:background="@drawable/square"
            android:id="@+id/et_password"
            android:textColorHint="#fcf8ec"
            android:hint="Password"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:id="@+id/btn_signIn"
        android:layout_below="@+id/ll_login"
        android:src="@drawable/ic_baseline_login_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>